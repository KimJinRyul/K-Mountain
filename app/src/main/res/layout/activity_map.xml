<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rlBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/shape_map_btn" >

        <ToggleButton
            android:id="@+id/tbPoints"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_pin_drop_white"
            android:textOn=""
            android:textOff=""/>

        <ToggleButton
            android:id="@+id/tbWays"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tbPoints"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_directions_run_white"
            android:textOn = ""
            android:textOff=""/>

        <ImageView
            android:id="@+id/ivGPS"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tbWays"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_gps_off_white" />

    </RelativeLayout>

</RelativeLayout>