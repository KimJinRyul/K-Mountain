<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card"
    android:padding="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/rlImage"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#90a4ae">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivProgress"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_autorenew_white"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="#fff9c4"
            android:textSize="14dp"
            android:shadowColor="#000"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/tvMtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvAddress"
            android:layout_marginLeft="24dp"
            android:shadowColor="#000"
            android:shadowRadius="5"
            android:textColor="#fff"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvMtName"
            android:layout_toRightOf="@id/tvMtName"
            android:layout_marginLeft="5dp"
            android:shadowColor="#000"
            android:shadowRadius="5"
            android:textColor="#bbdefb"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/rlTodaysWeather"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/w01d"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvCurrentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:shadowColor="#fff"
                android:shadowRadius="5"
                android:textSize="14dp"
                android:textColor="#ff9800" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvSunRise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTodaysWeather"
            android:layout_marginLeft="10dp"
            android:textColor="#e040fb"
            android:textSize="8dp"
            android:shadowColor="#fff"
            android:shadowRadius="5"
            android:text="@string/RESULT_SUNRISE"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvSunSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSunRise"
            android:layout_alignLeft="@id/tvSunRise"
            android:textColor="#6200ea"
            android:textSize="8dp"
            android:shadowColor="#fff"
            android:shadowRadius="5"
            android:text="@string/RESULT_SUNSET"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNamed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#fff"
                android:shadowRadius="5"
                android:textColor="#ff5722"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@string/RESULT_ITEM_NAMED" />

            <TextView
                android:id="@+id/tvMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#fff"
                android:shadowRadius="5"
                android:textColor="#ff5722"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@string/RESULT_MAPINFO"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWeather"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/rlImage"
        android:background="#424242">

        <LinearLayout
            android:id="@+id/llWeathers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#e0e0e0"
            android:weightSum="5"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rlDay1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivDay1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/w02d"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tvDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="16수"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDay1TempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f00"
                        android:textSize="14dp"
                        android:text="26"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/tvDay1TempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00f"
                        android:textSize="14dp"
                        android:text="22" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDay2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivDay2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/w03d"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tvDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="17목"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDay2TempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f00"
                        android:textSize="14dp"
                        android:text="26"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/tvDay2TempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00f"
                        android:textSize="14dp"
                        android:text="22" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDay3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivDay3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/w04d"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tvDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="18금"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDay3TempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f00"
                        android:textSize="14dp"
                        android:text="26"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/tvDay3TempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00f"
                        android:textSize="14dp"
                        android:text="22" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDay4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivDay4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/w09d"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tvDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#00f"
                    android:textSize="18dp"
                    android:text="19토"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDay4TempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f00"
                        android:textSize="14dp"
                        android:text="26"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/tvDay4TempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00f"
                        android:textSize="14dp"
                        android:text="22" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDay5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivDay5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/w04d"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tvDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#f00"
                    android:textSize="18dp"
                    android:text="20일"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDay5TempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f00"
                        android:textSize="14dp"
                        android:text="26"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:text="/"/>
                    <TextView
                        android:id="@+id/tvDay5TempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00f"
                        android:textSize="14dp"
                        android:text="22" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/ivWeatherProgress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_autorenew_white"/>

        <TextView
            android:id="@+id/tvWeatherLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivWeatherProgress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="#fff"
            android:textSize="10dp"
            android:text="@string/RESULT_WEATHER_LOADING"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llInfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlWeather"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlBtns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_below="@id/llInfos">

        <Button
            android:id="@+id/btnDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#ff8f00"
            android:textSize="16dp"
            android:text="@string/CARD_DETAIL"/>

        <Button
            android:id="@+id/btnShare"
            android:layout_toRightOf="@id/btnDetail"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#ff8f00"
            android:textSize="16dp"
            android:text="@string/CARD_SHARE"/>

        <Button
            android:id="@+id/btnMy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textColor="#673ab7"
            android:textSize="16dp"
            android:text="@string/CARD_ADDMY"/>

    </RelativeLayout>

</RelativeLayout>